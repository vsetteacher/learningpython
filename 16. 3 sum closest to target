# slow for larget list
import itertools
class Solution:
    def threeSumClosest(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        sumList = []
        sum = 0
        difference = 0
        
        for i in itertools.combinations(nums,3):
            sum = i[0]+i[1]+i[2]
            sumList.append(sum)
        for v in sumList:
            if abs(target - sum) > abs(target - v):
                sum = v
             
        return sum    
