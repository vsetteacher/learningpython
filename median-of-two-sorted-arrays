import statistics
class Solution:
    global get_median
    
    def get_median(nums):
        n = len(nums)
        if n%2:
            return nums[(n-1)//2]
        return (nums[n // 2] + nums[(n // 2)-1])/2
    def findMedianSortedArrays(self, nums1, nums2):
        """
        :type nums1: List[int]
        :type nums2: List[int]
        :rtype: float
        """
        
        nums3=nums1+nums2
        nums3.sort()
        return get_median(nums3)
